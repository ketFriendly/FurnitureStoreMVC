@model FurnitureStore.Models.Furniture

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br/>
<h3>Are you sure you want to delete this piece of furniture?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            
        </dt>

        <dd>
            @if (Model.Image != null)
            {
                <img src="@Url.Content(Model.Image)" alt="image" class="img_style" />
            }
        </dd>
        <dt>
            Item No.:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemNumber)
        </dd>

        <dt>
            Furniture name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Furniture1)
        </dd>

        <dt>
            Made in:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CountryOfOrigin)
        </dd>

        <dt>
            Production year:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductionYear)
        </dd>

        <dt>
            Price per item:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PricePerItem)
        </dd>



        <dt>
            Type of furniture:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FurnitureType.Name)
        </dd>

        <dt>
            Store name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Store1.Store_Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
