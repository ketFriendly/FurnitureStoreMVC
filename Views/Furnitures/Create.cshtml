@using (Html.BeginForm("Create", "Furnitures", FormMethod.Post, new { enctype = "multipart/form-data" } ))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <h4>Add new peice of furniture</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*<div class="form-group">
            <p class="control-label col-md-2">Item Number</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ItemNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ItemNumber, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        <p class="control-label col-md-2">Furniture</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Furniture1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Furniture1, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Country of Origin</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CountryOfOrigin, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CountryOfOrigin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Production year (mm/dd/yyyy)</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProductionYear, new { htmlAttributes = new { @class = "form-control datepicker", @Value = DateTime.Now.ToString("MM'/'dd'/'yyyy"), type = "datetime" } })
            @Html.ValidationMessageFor(model => model.ProductionYear, "The field Production year must be a date.", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Price per item</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PricePerItem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PricePerItem, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Store</p>
        <div class="col-md-10">
            @Html.DropDownList("Store", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Store, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Type of Furniture</p>
        <div class="col-md-10">
            @Html.DropDownList("TypeOfFurniture", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TypeOfFurniture, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="control-label col-md-2">
        <label class="input-file" for="Image">
            Upload image
            <input type="file" name="ImageFile" onchange="show(this)" required />
        </label>
    </div>
    
    <div class="control-label col-md-2"> <img id="user_img" class="img_style" /> </div>

    <br/>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
   
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

        <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
        <script>
            $(function () {
                $(".datepicker").datepicker({
                    dateFormat: "MM/dd/yy"
                });
            });
        </script>
        <script type="text/javascript">  
           function show(input) {  
              if (input.files && input.files[0]) {  
              var filerdr = new FileReader();  
              filerdr.onload = function (e) {  
                 $('#user_img').attr('src', e.target.result);  
              }  
              filerdr.readAsDataURL(input.files[0]);  
           }  
        }  
        </script>  
    }
