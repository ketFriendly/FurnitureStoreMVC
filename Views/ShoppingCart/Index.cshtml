@model IEnumerable<FurnitureStore.Models.Item>

@{
    ViewBag.Title = "Welcome to Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>

<h2>  Welcome to Shopping Cart <strong>@User.Identity.Name</strong> :)</h2>
<p>@Html.ActionLink("Back to Browsing", "Index", "Furnitures")</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Furniture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price_per_item)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Receipt.Net_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Receipt.Taxes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Receipt.Gross_price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Furniture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price_per_item)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Receipt.Net_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Receipt.Taxes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Receipt.Gross_price)
        </td>
        <td>
           
            @Html.ActionLink("Delete", "Delete", new { furniture = item.Furniture })

        </td>
    </tr>
}

</table>
<h2>@Html.ActionLink("Finish Shopping","FinishShopping")</h2>